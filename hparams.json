{
    "Dir": {
        "log_root": "results/mnist/"
    },
    "Glow" : {
        "in_channels": 1,
        "hidden_channels": 96,
        "flow_depth": 2,
        "flow_levels": 3,
        "actnorm_scale": 1.0,
        "logscale_factor": 3.0,
        "flow_permutation": "invconv1x1",
        "flow_coupling": "additive",
        "LU_decomposed": false,
        "learn_top": false,
        "y_condition": true,
        "y_classes": 10
    },
    "Data" : {
        "center_crop": 28,
        "resize": 32
    },
    "Optim": {
        "name": "adam",
        "args": {
            "lr": 1e-3,
            "betas": [0.9, 0.9999],
            "eps": 1e-8
        },
        "Schedule": {
            "name": "noam_learning_rate_decay",
            "args": {
                "warmup_steps": 4000,
                "minimum": 1e-4
            }
        }
    },
    "Device": {
        "glow": ["cuda:0"],
        "data": "cuda:0"
    },
    "Train": {
        "batch_size": 64,
        "num_batches": 1000000,
        "with_attention_guide": true,
        "max_grad_clip": 5,
        "max_grad_norm": 100,
        "time_steps_mask": true,
        "max_checkpoints": 10,
        "checkpoints_gap": 1000,
        "num_plot_samples": 1,
        "scalar_log_gap": 100,
        "plot_gap": 500,
        "inference_gap": 1000,
        "warm_start": "",
        "weight_y": 0.5
    }
}
