    },
    "Train": {
        "batch_size": 32,
        "num_batches": 1000000,
        "with_attention_guide": true,
        "max_grad_clip": 1,
        "max_grad_norm": null,
        "time_steps_mask": true,
        "max_checkpoints": 10,
        "checkpoints_gap": 1000,
        "num_plot_samples": 1,
        "scalar_log_gap": 100,
        "plot_gap": 500,
        "inference_gap": 1000,
        "warm_start": ""
