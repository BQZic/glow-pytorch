{
    "Dir": {
        "log_root": "results/"
    },
    "Glow" : {
        "in_channels": 3,
        "hidden_channels": 512,
        "flow_steps": 5,
        "actnorm_scale": 1.0,
        "logscale_factor": 3.0,
        "flow_permutation": "invconv1x1",
        "flow_coupling": "additive",
        "LU_decomposed": false,
        "learn_top": false,
        "y_condition": false
    },
    "Data" : {
        "y_classes": 40
    },
    "Optim": {
        "name": "adam",
        "args": {
            "lr": 1e-3,
            "betas": [0.9, 0.9999],
            "eps": 1e-8
